{
    "name": "<%= pkg %>",
    "version": "<%= version %>",
    "description": "<%= tagline %>",
    "main": "dist/<%= pkg %>.js",
    "types": "dist/<%= pkg %>.d.ts",
    "scripts": {
        "install": "tsc",
        "test": "ava",
        "test:watch": "npm test -- --watch",
        "dev": "concurrently \"tsc -w\" \"nodemon -e 'ts json' -x 'npm test || true'\"",
        "watch:test": "nodemon -e 'ts json' -x 'npm test || true'",
        "typedoc": "typedoc && rm README.md && cp ./doc/typedoc/README.md ."
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run typedoc && git add doc && (git commit -m 'Update documentation' || true)"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+<%= git_repository %>.git"
    },
    "keywords": [
    ],
    "author": "<%= author %> <<%= email %>> (https://<%= git_forge %>/<%= git_username %>)",
    "license": "<%- license %>",
    "bugs": {
        "url": "<%= git_repository %>/issues"
    },
    "homepage": "<%= git_repository %>",
    "dependencies": {
        "@types/node": "^10.12.18",
        "typescript": "^3.2.2"
    },
    "devDependencies": {
        "ava": "^1.0.0",
        "concurrently": "^4.1.0",
        "husky": "^1.3.1",
        "ts-node": "^7.0.1",
        "typedoc": "^0.13.0",
        "typedoc-plugin-markdown": "^1.1.20"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
