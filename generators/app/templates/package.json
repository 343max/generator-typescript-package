{
    "name": "<%= scopedPkg %>",
    "version": "<%= version %>",
    "description": "<%= tagline %>",
    "main": "dist/<%= pkg %>.js",
    "types": "dist/<%= pkg %>.d.ts",
    "scripts": {
        "install": "tsc",
        "ava": "ava -s -v",
        "watch:ava": "nodemon -e 'ts json' -x 'npm run ava || true'",
        "test": "nyc ava",
        "test:tap": "nyc ava --tap | tap-nyc",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "watch:test": "nodemon -e 'ts json' -x 'npm test || true'",
        "typedoc": "typedoc",
        "push-with-tags": "git push origin master && git push origin --tags",
        "push-and-publish": "npm run push-with-tags && npm publish"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run typedoc && git add doc && (git commit -m 'Update documentation' || true)"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+<%= git_repository %>.git"
    },
    "keywords": [
    ],
    "author": "<%= author %> <<%= email %>> (https://<%= git_forge %>/<%= git_username %>)",
    "license": "<%- license %>",
    "bugs": {
        "url": "<%= git_repository %>/issues"
    },
    "homepage": "<%= git_repository %>",
    "dependencies": {
        "@types/node": "^10.12.18",
        "typescript": "^3.2.2"
    },
    "devDependencies": {
        "ava": "^1.0.0",
        "codecov": "^3.1.0",
        "husky": "^1.3.1",
        "nyc": "^13.1.0",
        "tap-nyc": "^1.0.3",
        "ts-node": "^7.0.1",
        "typedoc": "^0.13.0",
        "typedoc-plugin-markdown": "^1.1.20"
    },
    "ava": {
        "compileEnhancements": false,
        "files": [
            "!dist/**/*.d.ts",
            "test/**/*.ts"
        ],
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "nyc": {
        "include": [
            "src/*.ts"
        ],
        "exclude": [
            "typings"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
